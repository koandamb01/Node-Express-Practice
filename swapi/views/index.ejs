<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>Document</title>
</head>

<body>
    <div class="container">
        <div class="box">
            <h1>Star Wars Wiki</h1>
            <p>What would you like to know more about?</p>
            <button class="btn btn-primary" id="people">People</button>
            <button class="btn btn-success" id="planets">Planets</button>
        </div>

        <ul class="list-group">
            <li class="list-group-item active"></li>
        </ul>
        <ul class="list-group list-overflow">
        </ul>
        <div class="box">
            <button class="btn btn-primary btn-sm" value="-1">Previous 10</button>
            <button class="btn btn-warning btn-sm" value="0">Get all 61 People</button>
            <button class="btn btn-primary btn-sm" value="1">Next 10</button>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // people API
            $('#people').click(function () {
                // make a get a request to our own server
                $.get('/people', function (data) {

                    $('.list-overflow').html('');
                    $('.list-group').show()
                    $('.btn-sm').show().removeClass('planets').addClass('people');
                    $('.btn-warning').text("Get all 61 People");

                    // show data
                    $('.active').text('PEOPLE');
                    for (person of data) {
                        $('.list-overflow').append(
                            "<li class='list-group-item'>" + person.name + "</li>"
                        );
                    }
                }, 'json');
            });

            // Planets API
            $('#planets').click(function () {
                // make a get a request to our own server
                $.get('/planets', function (data) {

                    $('.list-overflow').html('');
                    $('.list-group').show()
                    $('.btn-sm').show().removeClass('people').addClass('planets');
                    $('.btn-warning').text("Get all 61 Planets");

                    // show data
                    $('.active').text('PLANETS');
                    for (person of data) {
                        $('.list-overflow').append(
                            "<li class='list-group-item'>" + person.name + "</li>"
                        );
                    }
                }, 'json');
            });


            // People Previous / Next
            $(document).on('click', '.people', function () {
                var value = $(this).attr('value');
                // make a get a request to our own server
                $.get('/people/' + value, function (data) {

                    $('.list-overflow').html('');
                    $('.list-group').show()
                    $('.btn-sm').show().removeClass('planets').addClass('people');
                    $('.btn-warning').text("Get all 61 People");

                    // show data
                    $('.active').text('PEOPLE');
                    for (person of data) {
                        $('.list-overflow').append(
                            "<li class='list-group-item'>" + person.name + "</li>"
                        );
                    }
                }, 'json');
            });

            // People Previous / Next
            $(document).on('click', '.planets', function () {
                var value = $(this).attr('value');
                // make a get a request to our own server
                $.get('/planets/' + value, function (data) {

                    $('.list-overflow').html('');
                    $('.list-group').show()
                    $('.btn-sm').show().removeClass('people').addClass('planets');
                    $('.btn-warning').text("Get all 61 Planets");

                    // show data
                    $('.active').text('PLANETS');
                    for (person of data) {
                        $('.list-overflow').append(
                            "<li class='list-group-item'>" + person.name + "</li>"
                        );
                    }
                }, 'json');
            });
        });
    </script>
</body>

</html>